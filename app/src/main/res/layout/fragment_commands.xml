<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".MainActivity">
    <Space
        android:layout_height="25dp"
        android:layout_width="1dp" />

    <TextView android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:text="@string/enter_commands_and_send" />

    <Space
        android:layout_height="25dp"
        android:layout_width="1dp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="6"
        android:columnCount="3">

        <Button
            android:id="@+id/F"
            android:layout_width="@dimen/sizeBtn"
            android:layout_height="@dimen/sizeBtn"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/colorBtn"
            android:foreground="@drawable/ic_expand_less_black_24dp"
            android:contentDescription="@string/command_forward"
            android:onClick="addCommand"
            android:visibility="visible"
            android:layout_margin="10dp"
            android:text="F"/>

        <Button
            android:id="@+id/L"
            android:layout_width="@dimen/sizeBtn"
            android:layout_height="@dimen/sizeBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:foreground="@drawable/ic_chevron_left_black_24dp"
            android:background="@color/colorBtn"
            android:contentDescription="@string/command_left"
            android:onClick="addCommand"
            android:layout_margin="10dp"
            android:text="L"/>

        <Button
            android:id="@+id/S"
            android:layout_width="@dimen/sizeBtn"
            android:layout_height="@dimen/sizeBtn"
            android:layout_row="2"
            android:layout_column="1"
            android:foreground="@drawable/ic_speaker_phone_black_24dp"
            android:background="@color/colorSend"
            android:contentDescription="@string/command_send"
            android:onClick="sendCommand"
            android:layout_margin="10dp"
            android:text="S"/>


        <Button
            android:id="@+id/R"
            android:layout_width="@dimen/sizeBtn"
            android:layout_height="@dimen/sizeBtn"
            android:layout_row="2"
            android:layout_column="2"
            android:foreground="@drawable/ic_chevron_right_black_24dp"
            android:background="@color/colorBtn"
            android:contentDescription="@string/command_right"
            android:onClick="addCommand"
            android:layout_margin="10dp"
            android:text="R"/>


        <Button
            android:id="@+id/B"
            android:layout_width="@dimen/sizeBtn"
            android:layout_height="@dimen/sizeBtn"
            android:layout_row="3"
            android:layout_column="1"
            android:foreground="@drawable/ic_expand_more_black_24dp"
            android:background="@color/colorBtn"
            android:contentDescription="@string/command_back"
            android:onClick="addCommand"
            android:layout_margin="10dp"
            android:text="B"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/totalCommands">
    </LinearLayout>


    <Space
        android:layout_height="25dp"
        android:layout_width="1dp" />

    <TextView
        android:id="@+id/commands_edit"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>